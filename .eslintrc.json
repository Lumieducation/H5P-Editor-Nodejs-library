{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "plugins": ["jest"],
    "extends": ["airbnb-base", "prettier", "plugin:jest/recommended"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "global-require": "off",
        "import/no-dynamic-require": "off",
        "no-underscore-dangle": "off",
        "no-restricted-syntax": [
            "error",
            "ForInStatement",
            "LabeledStatement",
            "WithStatement"
        ],
        "no-param-reassign": "off",
        "import/no-extraneous-dependencies": ["error", {"devDependencies": ["test/**.js", "examples/**.js"]}]
    }
}
